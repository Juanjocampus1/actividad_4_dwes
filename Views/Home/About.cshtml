@{
    ViewData["Title"] = "Acerca de";
}

<div class="py-12 bg-gray-50 dark:bg-gray-900 min-h-screen gradient-bg">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12" data-aos="fade-up">
            <h1 class="text-4xl font-extrabold text-gray-900 dark:text-gray-100 mb-4">
                <i class="fas fa-info-circle mr-3 text-indigo-600"></i>
                Acerca de Investigación Científica
            </h1>
            <p class="text-xl text-gray-600 dark:text-gray-300">
                Plataforma integral para la gestión y visualización de proyectos de investigación
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
            <div class="glass p-6 rounded-3xl" data-aos="fade-right">
                <h3 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-4">
                    <i class="fas fa-flask mr-2 text-blue-500"></i>
                    Nuestra Misión
                </h3>
                <p class="text-gray-600 dark:text-gray-300">
                    Facilitar la gestión y seguimiento de proyectos de investigación científica,
                    proporcionando herramientas intuitivas para investigadores, instituciones y
                    organizaciones dedicadas al avance del conocimiento.
                </p>
            </div>

            <div class="glass p-6 rounded-3xl" data-aos="fade-left">
                <h3 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-4">
                    <i class="fas fa-chart-line mr-2 text-green-500"></i>
                    Características
                </h3>
                <ul class="text-gray-600 dark:text-gray-300 space-y-2">
                    <li>• Gestión completa de proyectos</li>
                    <li>• Perfiles de investigadores</li>
                    <li>• Información institucional</li>
                    <li>• Seguimiento de publicaciones</li>
                    <li>• Estadísticas en tiempo real</li>
                </ul>
            </div>
        </div>

        <div class="text-center" data-aos="fade-up">
            <div class="glass p-8 rounded-3xl">
                <h3 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-4">
                    <i class="fas fa-code mr-2 text-purple-500"></i>
                    Tecnología
                </h3>
                <p class="text-gray-600 dark:text-gray-300 mb-6">
                    Desarrollado con las últimas tecnologías web para garantizar rendimiento,
                    seguridad y una experiencia de usuario excepcional.
                </p>
                <div class="flex flex-wrap justify-center gap-4">
                    <span class="px-4 py-2 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded-full text-sm font-medium">ASP.NET Core</span>
                    <span class="px-4 py-2 bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 rounded-full text-sm font-medium">Entity Framework</span>
                    <span class="px-4 py-2 bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-200 rounded-full text-sm font-medium">Tailwind CSS</span>
                    <span class="px-4 py-2 bg-red-100 dark:bg-red-900 text-red-800 dark:text-red-200 rounded-full text-sm font-medium">Chart.js</span>
                </div>
            </div>
        </div>
    </div>
</div>