@model IEnumerable<Publicacion>

@{
    ViewData["Title"] = "Publicaciones";
}

<div class="py-12 bg-gray-50 dark:bg-gray-900 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 flex items-center">
                <i class="fas fa-book mr-3 text-yellow-600 dark:text-yellow-400"></i>
                Publicaciones
            </h1>
            <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">Lista de publicaciones científicas con filtros avanzados.</p>
        </div>

        <!-- Formulario de Búsqueda -->
        <div class="bg-white dark:bg-gray-800 shadow-2xl rounded-3xl p-6 mb-8">
            <form asp-action="Index" method="get" class="grid grid-cols-1 md:grid-cols-5 gap-4">
                <div>
                    <label for="searchString" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        <i class="fas fa-search mr-1"></i> Buscar (Título, Revista)
                    </label>
                    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-2xl shadow-sm focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 dark:bg-gray-700 dark:text-gray-100 transition-all"
                        placeholder="Ingrese título o revista..." />
                </div>
                <div>
                    <label for="añoDesde" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        <i class="fas fa-calendar mr-1"></i> Año Desde
                    </label>
                    <input type="number" name="añoDesde" value="@ViewData["AñoDesde"]" class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-2xl shadow-sm focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 dark:bg-gray-700 dark:text-gray-100 transition-all"
                        min="1900" max="2100" />
                </div>
                <div>
                    <label for="añoHasta" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        <i class="fas fa-calendar mr-1"></i> Año Hasta
                    </label>
                    <input type="number" name="añoHasta" value="@ViewData["AñoHasta"]" class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-2xl shadow-sm focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 dark:bg-gray-700 dark:text-gray-100 transition-all"
                        min="1900" max="2100" />
                </div>
                <div>
                    <label for="proyectoId" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        <i class="fas fa-project-diagram mr-1"></i> Proyecto
                    </label>
                    <select name="proyectoId" class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-2xl shadow-sm focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 dark:bg-gray-700 dark:text-gray-100 transition-all">
                        <option value="">Todos los proyectos</option>
                        @foreach (var proy in ViewBag.Proyectos as IEnumerable<Proyecto>)
                        {
                            <option value="@proy.Id"
                                selected="@(ViewData["ProyectoId"]?.ToString() == proy.Id.ToString())">@proy.Titulo
                            </option>
                        }
                    </select>
                </div>
                <div class="flex items-end">
                    <button type="submit"
                        class="w-full bg-gradient-to-r from-yellow-600 to-orange-600 dark:from-yellow-500 dark:to-orange-500 text-white px-6 py-3 rounded-2xl hover:from-yellow-700 hover:to-orange-700 dark:hover:from-yellow-600 dark:hover:to-orange-600 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:ring-offset-2 transition-all flex items-center justify-center font-medium shadow-lg hover:shadow-xl">
                        <i class="fas fa-filter mr-2"></i> Buscar
                    </button>
                </div>
            </form>
        </div>

        <!-- Grid de Publicaciones -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var (item, index) in Model.Select((item, index) => (item, index)))
            {
                <div class="glass rounded-3xl shadow-2xl overflow-hidden hover:shadow-3xl transition-all duration-500 transform hover:-translate-y-3 hover:scale-105" data-aos="fade-up" data-aos-delay="@(index * 100)">
                    <div class="bg-gradient-to-r from-yellow-500 to-orange-600 dark:from-yellow-600 dark:to-orange-700 px-6 py-4">
                        <h3 class="text-xl font-bold text-white flex items-center">
                            <i class="fas fa-file-alt mr-2"></i>
                            @Html.DisplayFor(modelItem => item.Titulo)
                        </h3>
                    </div>
                    <div class="p-6">
                        <div class="space-y-3 mb-4">
                            <div class="flex items-center text-sm text-gray-600 dark:text-gray-400">
                                <i class="fas fa-newspaper mr-2 text-blue-500 animate-spin"></i>
                                <span>@Html.DisplayFor(modelItem => item.Revista)</span>
                            </div>
                            <div class="flex items-center text-sm text-gray-600 dark:text-gray-400">
                                <i class="fas fa-calendar mr-2 text-green-500 animate-bounce"></i>
                                <span class="font-semibold">@Html.DisplayFor(modelItem => item.Año)</span>
                            </div>
                            <div class="flex items-center text-sm text-gray-600 dark:text-gray-400">
                                <i class="fas fa-project-diagram mr-2 text-purple-500 animate-pulse"></i>
                                <span>@(item.Proyecto?.Titulo ?? "Sin proyecto")</span>
                            </div>
                        </div>

                        <a asp-action="Details" asp-route-id="@item.Id" class="w-full bg-gradient-to-r from-yellow-600 to-orange-600 dark:from-yellow-500 dark:to-orange-500 text-white px-4 py-3 rounded-2xl hover:from-yellow-700 hover:to-orange-700 dark:hover:from-yellow-600 dark:hover:to-orange-600 transition-all flex items-center justify-center font-medium shadow-lg hover:shadow-xl ripple" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Ver detalles de la publicación">
                            <i class="fas fa-eye mr-2"></i> Ver Detalles
                        </a>
                    </div>
                </div>
            }
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-12">
                <i class="fas fa-search text-gray-400 dark:text-gray-600 text-6xl mb-4"></i>
                <h3 class="text-xl font-medium text-gray-900 dark:text-gray-100 mb-2">No se encontraron publicaciones</h3>
                <p class="text-gray-600 dark:text-gray-400">Intenta ajustar los filtros de búsqueda</p>
            </div>
        }
    </div>
</div></div>