@model Publicacion

@{
    ViewData["Title"] = "Detalles de Publicación";
}

<h1>@Model.Titulo</h1>

<div>
    <h4>Publicación</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Titulo)</dd>
        <dt class="col-sm-2">Revista</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Revista)</dd>
        <dt class="col-sm-2">Año</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Año)</dd>
        <dt class="col-sm-2">Proyecto</dt>
        <dd class="col-sm-10">@(Model.Proyecto?.Titulo ?? "Sin proyecto asignado")</dd>
    </dl>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>