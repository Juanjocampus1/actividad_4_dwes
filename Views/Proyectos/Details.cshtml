@model Proyecto

@{
    ViewData["Title"] = "Detalles de Proyecto";
}

<div class="min-h-screen bg-gray-50 dark:bg-gray-900 py-8 gradient-bg">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="glass shadow-2xl rounded-3xl overflow-hidden mb-8 animate-float">
            <div class="bg-gradient-to-r from-blue-500 to-purple-600 dark:from-blue-600 dark:to-purple-700 px-6 py-4">
                <h1 class="text-3xl font-bold text-white flex items-center">
                    <i class="fas fa-project-diagram mr-3"></i>
                    @Model.Titulo
                </h1>
            </div>
            <div class="p-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <h4 class="text-lg font-semibold text-gray-800 dark:text-gray-200 mb-4 flex items-center">
                            <i class="fas fa-info-circle mr-2 text-blue-500"></i>
                            Información del Proyecto
                        </h4>
                        <dl class="space-y-3">
                            <div class="flex justify-between">
                                <dt class="font-medium text-gray-600 dark:text-gray-400">Título:</dt>
                                <dd class="text-gray-900 dark:text-gray-100">@Html.DisplayFor(model => model.Titulo)</dd>
                            </div>
                            <div class="flex justify-between">
                                <dt class="font-medium text-gray-600 dark:text-gray-400">Descripción:</dt>
                                <dd class="text-gray-900 dark:text-gray-100">@(string.IsNullOrEmpty(Model.Descripcion) ? "Sin descripción" : Model.Descripcion)</dd>
                            </div>
                            <div class="flex justify-between">
                                <dt class="font-medium text-gray-600 dark:text-gray-400">Fecha Inicio:</dt>
                                <dd class="text-gray-900 dark:text-gray-100">@Model.FechaInicio.ToShortDateString()</dd>
                            </div>
                            <div class="flex justify-between">
                                <dt class="font-medium text-gray-600 dark:text-gray-400">Fecha Fin:</dt>
                                <dd class="text-gray-900 dark:text-gray-100">@(Model.FechaFin?.ToShortDateString() ?? "En curso")</dd>
                            </div>
                            <div class="flex justify-between">
                                <dt class="font-medium text-gray-600 dark:text-gray-400">Presupuesto:</dt>
                                <dd class="text-green-600 dark:text-green-400 font-semibold">@Model.Presupuesto.ToString("C")</dd>
                            </div>
                        </dl>
                    </div>
                    <div class="flex items-center justify-center">
                        <div class="text-center">
                            <div class="w-32 h-32 bg-gradient-to-br from-green-400 to-blue-500 dark:from-green-500 dark:to-blue-600 rounded-full flex items-center justify-center mx-auto mb-4 shadow-2xl animate-glow">
                                <i class="fas fa-euro-sign text-white text-4xl"></i>
                            </div>
                            <p class="text-sm text-gray-600 dark:text-gray-400">Presupuesto Asignado</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Investigadores -->
        <div class="glass shadow-2xl rounded-3xl overflow-hidden mb-8">
            <div class="bg-gradient-to-r from-green-500 to-teal-600 dark:from-green-600 dark:to-teal-700 px-6 py-4">
                <h3 class="text-2xl font-bold text-white flex items-center">
                    <i class="fas fa-users mr-3"></i>
                    Investigadores (@Model.InvestigadorProyectos.Count)
                </h3>
            </div>
            <div class="p-6">
                @if (Model.InvestigadorProyectos.Any())
                {
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                        @foreach (var ip in Model.InvestigadorProyectos)
                        {
                            <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-2xl border border-gray-200 dark:border-gray-600 hover:shadow-xl dark:hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 hover:scale-105">
                                <div class="flex items-center mb-2">
                                    <i class="fas fa-user-circle text-green-500 dark:text-green-400 mr-2 animate-float"></i>
                                    <h5 class="font-semibold text-gray-800 dark:text-gray-200">@ip.Investigador.Nombre @ip.Investigador.Apellido</h5>
                                </div>
                                <p class="text-sm text-gray-600 dark:text-gray-400">
                                    <i class="fas fa-envelope mr-1"></i>
                                    <a href="mailto:@ip.Investigador.Email" class="text-blue-600 dark:text-blue-400 hover:underline">@ip.Investigador.Email</a>
                                </p>
                                <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
                                    <i class="fas fa-university mr-1"></i>
                                    @(ip.Investigador.Institucion?.Nombre ?? "Sin institución asignada")
                                </p>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-gray-500 dark:text-gray-400 text-center py-8">No hay investigadores asignados a este proyecto.</p>
                }
            </div>
        </div>

        <!-- Publicaciones -->
        <div class="glass shadow-2xl rounded-3xl overflow-hidden mb-8">
            <div class="bg-gradient-to-r from-yellow-500 to-orange-600 dark:from-yellow-600 dark:to-orange-700 px-6 py-4">
                <h3 class="text-2xl font-bold text-white flex items-center">
                    <i class="fas fa-book mr-3"></i>
                    Publicaciones (@Model.Publicaciones.Count)
                </h3>
            </div>
            <div class="p-6">
                @if (Model.Publicaciones.Any())
                {
                    <div class="space-y-4">
                        @foreach (var pub in Model.Publicaciones)
                        {
                            <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-2xl border border-gray-200 dark:border-gray-600 hover:shadow-xl dark:hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 hover:scale-105">
                                <div class="flex justify-between items-start">
                                    <div class="flex-1">
                                        <h5 class="font-semibold text-gray-800 dark:text-gray-200 mb-1">@pub.Titulo</h5>
                                        <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">
                                            <i class="fas fa-newspaper mr-1"></i>
                                            @pub.Revista
                                        </p>
                                    </div>
                                    <div class="text-right">
                                        <span class="inline-block bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-300 px-3 py-1 rounded-full text-sm font-medium animate-pulse">
                                            <i class="fas fa-calendar mr-1"></i>
                                            @pub.Año
                                        </span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-gray-500 dark:text-gray-400 text-center py-8">No hay publicaciones asociadas a este proyecto.</p>
                }
            </div>
        </div>

        <!-- Botón Volver -->
        <div class="text-center">
            <a asp-action="Index" class="inline-flex items-center px-6 py-3 bg-gray-600 dark:bg-gray-700 text-white font-medium rounded-2xl hover:bg-gray-700 dark:hover:bg-gray-600 transition-all shadow-lg hover:shadow-xl ripple">
                <i class="fas fa-arrow-left mr-2"></i>
                Volver a la Lista
            </a>
        </div>
    </div>
</div>